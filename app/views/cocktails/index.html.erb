<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Cocktails</h1>
      <ul>
        <% @cocktails.each do |cocktail| %>
        <li>
          <strong>
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </strong>
        </li>
        <% end %>
        <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
      </ul>
    </div>
  </div>
</div>

