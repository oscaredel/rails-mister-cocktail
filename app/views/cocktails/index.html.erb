<%= render 'layouts/banner' %>

<div class="row">
  <div class="cards">
   <% @cocktails.each do |cocktail| %>
     <%= link_to cocktail_path(cocktail) do %>
     <div class="col-xs-12 col-sm-4">
       <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4)), url('https://source.unsplash.com/500x300/?drink');">
         <div class="card-description">
          <h2> <%= cocktail.name %></h2>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
</div>
