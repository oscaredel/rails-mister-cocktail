<div class="container">
  <h1>All cocktails <small>(<%= @cocktails.count %>)</small></h1>
  <br>
  <div class="card-deck">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <div class="card-body">
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag( cocktail.photo.key, class:'card-img-top') %>
          <% end %>
          <h5 class="card-title">
            <%= cocktail.name %>
          </h5>
          <%= link_to "ingredients", cocktail_path(cocktail), class:'card-link'%>
        </div>
      </div>
    <% end %>
  </div>
</div>

