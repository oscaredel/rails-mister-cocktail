<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <strong>
      <%=  dose.description %>
      <%=  dose.ingredient.name %>
    </strong>
  </li>
  <% end %>
</ul>
      <%=  cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %></br>
<%= link_to "Add new cocktail dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>

